<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Z BID </title>
  </head>
  <body>
   <form action="/procees" method="post">


  
   
    <div class="jumbotron">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-4">
          <%- include('Navbar'); %>
            </div>
            <div class="col-sm-3"></div>
            <div class="col-sm-2"></div>
        </div>
            

</div>

 <div class="container" style="border: dotted;">
    <div class="row">
<% for(let itm in item) {%>
     

<div class="card" style="width: 18rem;" style="margin: 2%; float: left; ">
    
        <%  let pho=item[itm].image  %>
        <% const imageBase64 = pho.toString('base64') %>
        <% const dataUri = `data:image/jpeg;base64,${imageBase64}` %>

   <div class="card-body">
        <% let pr= Number.parseInt(item[itm].InitialPist)  %>
        
      <h5 class="card-title"><%=item[itm].Model %></h5>
      <h5 class="card-title"><%=pr.toLocaleString("en-US") %></h5>
      <h5 class="card-title"><%=item[itm].Description %></h5>
      <h5 class="card-title"><%=item[itm].Itemid %></h5>
     
      <a href="/bid?itemid=<%=item[itm].Itemid  %>" class="btn btn-primary">BID</a>
   
    
</div>         <img class="card-img-top"  width="400px"  height="200px" src="<%=dataUri %>" alt="Card image cap">
    

    </div>   <% } %>
  </div></div>
</div>
   

<div class="jumbotron">
    
  </div>
</form>

</body>

</html>