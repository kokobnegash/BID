  <body>
   <form action="/postitem" method="post"  enctype="multipart/form-data">


    <%- include('Navbar'); %>
   
   

    <div class="container">
        Item details
        <hr/>
        <div class="row">
    <div class="col-sm-3">
        <label for="category" class="form-label">Item Category</label>
         <select  class="form-control" name="category"  placeholder="select type">
            <option value="1">Cars</option>
            <option value="2">Art Works</option>
         </select>
        
      
        <label for="name" class="form-label">Item Name</label>
        <input type="text"name="name" class="form-control"  placeholder="Item name">

        <label for="Description">Description</label>
        <textarea class="form-control" name="Description"  rows="3"></textarea>



        
        <label for="InitialPrice" class="form-label">Initial Price</label>
        <input type="text" name="InitialPrice" class="form-control"  placeholder="initial price">
        <label for="closingdate">Bid Closing Date</label>
<input type="datetime-local" id="closingdate" class="form-control"  name="closingdate">
        
        <label for="file" class="form-label">Picture</label>
        <input type="file" value="upload me "    name="file2"/>
     <button type="submit" class="btn btn-info">Post Item</button>

    </div>
      
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-6"> 
                    
        <input type="text" name="searchval" class="form-control"  placeholder="search Value">
        
                </div>
                <div class="col-sm-6">
             
                    
                    
                    
                    <button type="submit" class="btn btn-info">search</button>

            <button type="submit"  name="edit" class="btn btn-info">Edit</button>
            <button type="submit" class="btn btn-info">delete</button>
                </div>
            </div>
           
          
           
            <table class="table"   style="width: 100%;">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Item</th>
                    <th scope="col">Description</th>
                    <th scope="col">Initial Price</th>
                    <th scope="col">Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let itm in item) {%>
                 <tr>
                    <td> <input type="radio" class="form-control" name="row" value="<%=itm %>" </td>
                    <td><%=item[itm].Model %></td>
                    <td><%=item[itm].Description %></td>
                    <td><%=item[itm].InitialPist %></td>
                 </tr>

                 <% }%>
                </tbody>
              </table>
    </div>
    </div>
